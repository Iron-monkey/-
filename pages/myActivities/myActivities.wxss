.search {
  height: 60rpx;
  background-color: #e4e4e4;
  padding: 20rpx;
  position: relative;
}
.search_icon {
  position: absolute;
  left: 25rpx;
  top: 25rpx;
  width: 60rpx;
  height: 60rpx;
}
.search_icon image {
  width: 90%;
  height: 90%;
}
.search input {
  width: 90%;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: #fff;
  padding-left: 60rpx;
  line-height: 60rpx;
}

/* 活动 */
.Activities {
  margin-top: 30rpx;

}
.activities_detail {
  margin: 20rpx;
  display: flex;
  width: 100%;
  height: 150rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e4e4e4;
}
.activitiesImg {
  width: 200rpx;
  height: 150rpx;
}
.activitiesImg image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.activitiesText {
  padding: 0 40rpx;
  width: 500rpx;
  height: 150rpx;
}
.activities_intro {
  display: flex;
  justify-content: space-between;
}
.activitiesText-Header {
  margin-bottom: 20rpx;
  line-height: 28rpx;
  font-weight: 700;
  font-size: 30rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.activities_date {
  font-size: 24rpx;
  color: #ccc;
}
.activitiesLeader {
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #ccc;
}
.isActived {
  padding: 0 10rpx;
  height: 40rpx;
  color: #ccc;
  border-radius: 10rpx;
  border: 1px solid #ccc;
  font-size: 24rpx;
  line-height: 40rpx;
}
.isActive {
  padding: 0 10rpx;
  height: 40rpx;
  color: cornflowerblue;
  border-radius: 10rpx;
  border: 1px solid cornflowerblue;
  font-size: 24rpx;
  line-height: 40rpx;
}