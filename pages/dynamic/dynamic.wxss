/* pages/dynamic/dynamic.wxss */
/* 头部 */
.header {
  position: relative;
  height: 180px;
  background-color: #891112;
}

.header-bottom{
  width: 100%;
  height: 80px;
  background-color: #891112;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}
.ynuNewsText1 {
  position: absolute;
  top: 10px;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 18px;
  font-weight: 700;
}
.ynuNewsText2 {
  position: absolute;
  top: 35px;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 14px;
  font-weight: 700;
}

/* 轮播图 */
.swiper-container {
  margin-top: initial;
  top:65px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
}
swiper {
  height: 250px;
  width: 280px;
}

swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 300rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}
.tags-top{
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tags{
  height: 30px;
  margin-top: 20px;
  background-color: #fff;
  font-size: 14px;
  display: flex;
}

.tags image{
  margin-top: 8px;
  height:3px;
  width: 30px;
}
/* 新闻中心 */
.Header-box{
  background-color: #fff;
  float: left;
  margin-left: 5px;
  width: 100%;
  border-bottom: 2px solid #891112;
}
.newsHeader {
  height: 30px;
  width: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.newsHeader image {
  top: 2px;
  left: 2px;
  width: 24px;
  height: 24px;
}
.newsHeader text {
  color: #891112;
  line-height: 30px;
}

.newsList{
  background-color: #fff;
  margin: 80rpx 20rpx 40rpx 20rpx;
}

.imgbox{
  box-shadow:7rpx 7rpx 5rpx #e4e4e4;
  border-radius: 10rpx;
  font-family: Microsoft YaHei;
}

.list_item{
  margin-top:20rpx;
  position: relative;
  border-radius: 20rpx;
}
.list_item text{
  font-size: 30rpx
}

.newspic{
  float: left;
  margin: 10rpx;
  display: block;
  width: 20%;
  background-repeat:no-repeat;
  background-position:center;
  background-size:150rpx 130rpx;
}
.newspic image{
  width:150rpx;
  height: 150rpx
}
.newstitle{
 margin-top: 30rpx;
 margin-left: 30rpx;
 float: left;
 width: 70%;
 font-size: 28rpx;
}

.newsfoot{
  float: right;
  position: absolute;
  right: 40rpx;
  bottom: 10rpx;
}

.textfrom{
  display: inline-block;
  font-size: 20rpx;
}

.textsource{
  display: inline-block;
  font-size: 22rpx;
  border: 2rpx solid red;
  border-radius: 10rpx;
  padding: 5rpx;
  color: red;
}
.clearfix:after {
content: "";
display: block;
clear: both;
height: 0;
}
.clearfix {
zoom: 1;
}